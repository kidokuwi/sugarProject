<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<script src="~/js/time.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<script>
    window.onload = (event) => {
		setInterval(displayTime, 1000);
    }
</script>
<body style="background-color:burlywood; margin: 0px;">

    <div class="PageLayout">

       
        <div>
            <ul style="display: flex; margin: 0; padding: 0; list-style: none;">
                <li><a asp-page="/index">Home</a></li>
                <li><a asp-page="/secondaryPage">Secondary page</a></li>
                <li><a asp-page="/sugarInBread">Sugar in bread</a></li>
                <li><a asp-page="/ShowUsers">Show users</a></li>
                <li><a asp-page="/Register">Register</a></li>
                <li style="margin-left: 900px; display: inline-flex; align-items: center;">
                    Welcome @ViewData["UserName"], <a asp-page="/Login">Login</a>
                </li>
                <li style="margin-left: auto; margin-right: 10px; margin-top: 14px;"><div class="list-inline-item" id="time"></div></li>
            </ul>
        </div>
        <br />







        <div class="center" style="background-color:wheat">


            <div>
                <h1>
                    @RenderSection("Title", required: false)
                </h1>
            </div>

            <div style="background-color:blanchedalmond">



                <div style="padding:40px">


                    <div>
                    </div>
                    <div>

                        @RenderBody()

                    </div>
                    <br />
                    
                    @RenderSection("img1", required: false)

                </div>
            </div>


        </div>





    </div>

</body>
</html>
