@page
@model sugarProject.Pages.UpdateUserModel
@using Microsoft.AspNetCore.Http
@{
}

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/errorvalidatelogin.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<script>

</script>
<style>
    .center {
        width: 30%;
    }
</style>
<div>

    <h3 class="text-center" style="color: #FF7F50; font-weight: bold;">
        User
        UPDATE
    </h3>
    <form name="regform" method="post" onsubmit="return validateForm(event);"
          onreset="resetForm();" class="needs-validation" novalidate>
        <div class="form-group">
            <label for="reg_email">Email</label>
            <input type="email" asp-for="@Model.email" class="form-control"
                   placeholder="abc.efg@gmail.co.il" oninput="checkEmail()"
                   id="reg_email" maxlength="25" value="@Model.user.eMail" required />
            <div class="invalid-feedback" id="reg_errormail">
                Please enter a
                valid email.
            </div>
        </div>

        <div class="form-group">
            <label for="reg_password">Password</label>
            <input type="text" asp-for="@Model.password" class="form-control"
                   id="reg_password" oninput="checkPass()" maxlength="25" value="@Model.user.pass" required />
            <div class="invalid-feedback" id="reg_errorpass">
                Please enter a
                password.
            </div>
        </div>

		<div class="form-group">
			<label for="reg_password">First Name</label>
			<input type="text" asp-for="@Model.fName" class="form-control"
				   id="reg_fName" oninput="checkFName()" maxlength="25" value="@Model.user.fName" required />
			<div class="invalid-feedback" id="reg_errorfName">
				Please enter a
				first name.
            </div>
		</div>

        <div class="form-group">
            <label for="reg_gender">Gender:</label>
            <br>
            <input asp-for="gender" type="radio" name="gender" value="Male" id="reg_gender_male" checked>
            <label for="reg_gender_male">Male</label>

            <input asp-for="gender" type="radio" name="gender" value="Female" id="reg_gender_female">
            <label for="reg_gender_female">Female</label>

            <input asp-for="gender" type="radio" name="gender" value="Other" id="reg_gender_other">
            <label for="reg_gender_other">Other</label>

            <div class="invalid-feedback d-none" id="reg_errorgender">
                Please select a gender.
            </div>
        </div>

        <div>
            <label for="reg_health">AM I HEALTHY</label>
            <br />
            <div class="form-check form-check-inline">
                <div style="padding-right: 5px;">I do sports</div>  <input type="checkbox" class="form-check-input" asp-for="@Model.doesSports" id="reg_sport" />
                <div style="padding-right: 5px;">I eat White Bread</div> <input type="checkbox" class="form-check-input" asp-for="@Model.eatsWhiteBread" id="reg_whitebread" />
                <div style="padding-right: 5px;">I eat sugar regularly</div> <input type="checkbox" class="form-check-input" asp-for="@Model.eatsSugarRegularly" id="reg_sugar" />
            </div>

        </div>

        <button type="submit" name="submit" value="login" class="btn btnprimary
btn-block" style="background-color: #FF7F50; border-color:#FF7F50; opacity: 0.8;">
            update
        </button>
        @Html.AntiForgeryToken()
    </form>
</div>