@page
@model sugarProject.Pages.GalleryModel
@{
    <head>
    <style>
        .center{
				width: 60%;
        }
        .backgroundDiv{
            width: 700px;
        }
            
            #smallImg{
                text-align: center;
                width: 150px;
                height: 100px;
            }
            
